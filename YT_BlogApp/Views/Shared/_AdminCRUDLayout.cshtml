<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog_Post_Article</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/landing.css" />
    <link rel="stylesheet" href="~/css/Post.css" />
    <link rel="stylesheet" href="~/css/CRUD_Sheet.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YT_BlogApp.styles.css" asp-append-version="true" />

    <!--Bootstrap style links-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!--These are links for the sweet alerts for the crud operations-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

</head>
<body>
        <header>
            <nav class="nav_nav">
                <div class="container mt-1 nav_container w-100">
                    <a asp-controller="Home" asp-action="Index" class="nav_logo nav___Links text-white">Egator</a>
                    <ul class="nav_items d-flex align-items-center">
                        <li><a class="text-white nav___Links" asp-controller="Home" asp-action="Blog">Blog</a></li>
                        <li><a class="text-white nav___Links" asp-controller="Home" asp-action="About">About</a></li>
                        <li><a class="text-white nav___Links" asp-controller="Home" asp-action="Services">Services</a></li>
                        <li><a class="text-white nav___Links " asp-controller="Home" asp-action="Contact">Contact</a></li>
                        <li class="nav_profile ps-1 pe-5 pb-2">
                            <div class="avatar mt-2 ">
                                <img class="img_class" src="/Blog VS Code/Images/c450af66d38ddae9b25e12d84679a216.jpg">
                            </div>
                            <ul>
                                <li><a class="text-white nav___Links" href="#">Dashboard</a></li>
                                <li><a class="text-white nav_logout nav___Links" href="#">Logout</a></li>
                            </ul>
                        </li>
                    </ul>

                    <button class="" id="open_nav-btn"><i class="bi bi-list"></i></button>
                    <button id="close_nav-btn"><i class="bi bi-x-circle"></i> </button>
                </div>

            </nav><!--End of Nav-->
        </header>

        <div class="container-fluid">
            <main role="main" >
                @RenderBody()
            </main>
        </div>

    


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/UserPassword.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!--These are links for the sweet alerts for the crud operations-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!--End of the Links-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
