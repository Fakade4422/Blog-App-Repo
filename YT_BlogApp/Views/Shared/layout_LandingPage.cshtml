<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog_Post_Article</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/landing.css" />
    <link rel="stylesheet" href="~/css/Post.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YT_BlogApp.styles.css" asp-append-version="true" />

    <!--Bootstrap style links-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="home_body">
    <header>
        <nav class="nav_nav">
            <div class="container mt-1 nav_container w-100">
                <a asp-controller="Home" asp-action="Index" class="nav_logo nav___Links text-white">Egator</a>
                <ul class="nav_items d-flex align-items-center">
                    <li><a class="text-white nav___Links" asp-controller="Home" asp-action="Blog">Blog</a></li>
                    <li><a class="text-white nav___Links" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a class="text-white nav___Links" asp-controller="Home" asp-action="Services">Services</a></li>
                    <li><a class="text-white nav___Links " asp-controller="Home" asp-action="Contact">Contact</a></li>
                    <li><a class="text-white nav___Links text-nowrap" asp-controller="Home" asp-action="SignIn">Sign-In</a></li>
                    <li class="nav_profile px-4 pb-2">
                        <div class="avatar mt-2 ">
                            <img class="img_class" src="/Blog VS Code/Images/c450af66d38ddae9b25e12d84679a216.jpg">
                        </div>
                        <ul>
                            <li><a class="text-white nav___Links" href="#">Dashboard</a></li>
                            <li><a class="text-white nav_logout nav___Links" href="#">Logout</a></li>
                        </ul>
                    </li>
                </ul>

                <button class="" id="open_nav-btn"><i class="bi bi-list"></i></button>
                <button id="close_nav-btn"><i class="bi bi-x-circle"></i> </button>
            </div>

        </nav><!--End of Nav-->
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()

            <!----------------START OF CATEGORY BUTTON Section----------------------------------->
            <section class="w-100 my-5 category_buttons_section_border">
                <div class="row mt-5 d-flex justify-content-center align-items-center mx-5">
                    <!--First Row-->
                    <div class="col-md-3 col-12 d-flex justify-content-center">
                        <a href="#" class="mt-1 section_category-btn text-align-center rounded py-1 text-nowrap">Food</a>
                    </div>
                    <div class="col-md-3 col-12 mt-1 d-flex justify-content-center">
                        <a href="#" class=" section_category-btn text-align-center rounded py-1 text-nowrap">Music</a>
                    </div>
                    <div class="col-md-3 col-12 mt-1 d-flex justify-content-center">
                        <a href="#" class=" section_category-btn text-align-center rounded py-1 text-nowrap">Art</a>
                    </div>
                </div>

                <div class="row mt-md-2 d-flex justify-content-center align-items-center mx-5">
                    <!--Second Row-->
                    <div class="col-md-3 col-12 d-flex justify-content-center">
                        <a href="#" class="mt-1 section_category-btn text-align-center rounded py-1 text-nowrap">Science & Tech</a>
                    </div>
                    <div class="col-md-3 col-12 d-flex justify-content-center">
                        <a href="#" class="mt-1 section_category-btn text-align-center rounded py-1 text-nowrap">Wild Life</a>
                    </div>
                    <div class="col-md-3 col-12 d-flex justify-content-center">
                        <a href="#" class=" mt-1 section_category-btn text-align-center rounded py-1 text-nowrap">Travel</a>
                    </div>
                </div>
            </section>

            <!----------------END OF CATEGORY BUTTON Section----------------------------------->
        </main>
    </div>

    <!----------------START OF Footer Section----------------------------------->


    <footer class="background_footer mt-1 pt-5">
        <div class="row mt-5 d-flex justify-content-center text-center pb-5 mb-1">
            <div class="col-md-2 col-6 footer_socials">
                <a href="https://www.youtube.com/" target="_blank"><i class="bi bi-youtube back_solicals p-3"></i></a>
                <a href="https://www.x.com/" target="_blank"><i class="bi bi-twitter-x back_solicals p-3"></i></a>
                <a href="https://www.facebook.com/" target="_blank"><i class="bi bi-facebook back_solicals p-3"></i></a>
                <a href="www.linkedin.com" target="_blank"><i class="bi bi-linkedin back_solicals p-3"></i></a>
            </div>
        </div>
        <div class="row text-white mt-3 d-flex flex-row justify-content-center pb-5 mx-5 px-5 text-center">
            <div class="col-md-3 col-6">
                <label class="footer_headings mb-1">Categories</label>
                <div class="row">
                    <div class="col-12 d-flex flex-column">
                        <span class="footer_subjects">Business</span>
                        <span class="footer_subjects">Investment</span>
                        <span class="footer_subjects">Entertainment</span>
                        <span class="footer_subjects">Weather</span>
                        <span class="footer_subjects">Sports</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <label class="footer_headings mb-1">Support</label>
                <div class="row">
                    <div class="col-12 d-flex flex-column">
                        <span class="footer_subjects">Online Support</span>
                        <span class="footer_subjects">Call Numbers</span>
                        <span class="footer_subjects">Emails</span>
                        <span class="footer_subjects">Social Suports</span>
                        <span class="footer_subjects">Location</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <label class="footer_headings mb-1">Blog</label>
                <div class="row">
                    <div class="col-12 d-flex flex-column">
                        <span class="footer_subjects">Safety</span>
                        <span class="footer_subjects">Repair</span>
                        <span class="footer_subjects">Recent</span>
                        <span class="footer_subjects">Popular</span>
                        <span class="footer_subjects">Categories</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <label class="footer_headings mb-1">Permalinks</label>
                <div class="row">
                    <div class="col-12 d-flex flex-column">
                        <span class="footer_subjects">Home</span>
                        <span class="footer_subjects">Blog</span>
                        <span class="footer_subjects">About</span>
                        <span class="footer_subjects">Services</span>
                        <span class="footer_subjects">Contact</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row bottom_footer pt-4 pb-3">
            <div class="text-center text-white">
                <span>All Rights Reserved &copy; Copyright. Vellex Chronicals</span>
            </div>
        </div>

    </footer>


    <!----------------END OF Footer Section----------------------------------->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
